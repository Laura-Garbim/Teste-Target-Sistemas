function inverterString(str) {
    let resultado = '';
    for (let i = str.length - 1; i >= 0; i--) {
        resultado += str[i];
    }
    return resultado;
}

const entrada = prompt('Digite a palavra que deseja inverter:');
const invertida = inverterString(entrada);

console.log(`Palavra original: ${entrada}`);
console.log(`Palavra invertida: ${invertida}`);
